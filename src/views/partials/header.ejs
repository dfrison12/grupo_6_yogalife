<header class="main-header">
    <div class="top-header">
        <div class="logo">
            <a href="/">
                <i class="fas fa-hamsa"></i>
                <h1>yogalife</h1>
            </a>
            
        </div>
        <form class="search-form" action="/search" method="GET">
            <input type="text" class="search-input" name="wanted" placeholder="Busca tu coleccion favorita!">
            <button type="submit" class="search-button"><i class="fa fa-search"></i></button>
        </form>
        </div>
        
    <nav class="main-navbar">
        <ul class="left-navbar">
            <li><a href="/products">Catalogo</a></li>
            <li><a href="/#ofertas">Ofertas</a></li>
            <% if (locals.isLogged) { %>
                <li><a href="/products/add">Vender</a></li>
                <% } %>
            <li><a href="/#empresa-b">Nosotros</a></li>
        </ul>
        <ul class="right-navbar">
            <% if (locals.isLogged) { %> 
            <li><a href="/user/profile"><div class="user-avatar-container"><img class="user-avatar" src="/images/usersImages/<%=locals.userLogged.avatar%>"><div><%=locals.userLogged.name%></div></div></a></li>
            <% } else { %>
            <li><a href="/user/login">Ingresá </a></li>
            <li><a href="/user/register">Registrate </a></li>
            <%} %>
            <li><a href="#">Shop <i class="fas fa-dolly"></i></a></li>
            <% if (locals.isLogged) { %>
                <li><a href="/user/logout">Cerrar sesión </a></li>
                <% } %>
        </ul>
    </nav>
    <div class="burger-menu">
    <a href="#" class="burger-buttom">
        <i class="fas fa-om"></i>
    </a>
    </div>
