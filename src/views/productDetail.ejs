<!DOCTYPE html>
<html lang="en">
<!-- Head -->
<%- include ('./partials/head',{title: prenda.titulo , style:'productDetailStyles.css'}) %>
<body>
    <!-- Header -->
    <%- include ('./partials/header') %>

    <main >
      <div class="product-detail">
        <section class="product-images">
            <div class="product-images">
                <a href="/images/productsImages/<%= prenda.img1 %>"><img class="main-picture" src="/images/productsImages/<%= prenda.img1 %>" alt="img"></a>
                <div class="img-box">
                    <a href="/images/productsImages/<%= prenda.img2 %>"><img class="img-inbox" src="/images/productsImages/<%= prenda.img2 %>" alt="img"></a>
                    <a href="/images/productsImages/<%= prenda.img3 %>"><img class="img-inbox" src="/images/productsImages/<%= prenda.img3 %>" alt="img"></a>
                    <a href="/images/productsImages/<%= prenda.img4 %>"><img class="img-inbox" src="/images/productsImages/<%= prenda.img4 %>" alt="img"></a>
                </div>
            </div>
        </section>
        <section class="product-description">
            <div class="product-description">
                <h1 class="product-name"><%= prenda.titulo %></h1>
                <h4 class=coleccion><%= prenda.coleccion %></h4>
                <p class="price"> $ <%= prenda.precio %> </p>

                <% if (prenda.oferta > 0) { %>
                    <p class='sale'> <%= prenda.oferta %>% off</p>
                    <% } %>

                <a href="/images/tabla-talles.jpg">ver tabla de talles</a>
                <form action=# method="get">
                <!-- <div class="color">
                    <label for="color"> Color: </label>
                    <div class='color-button'>             
                            <input class="color" type="button" name="color" value=ColorRojo>
                            <img class="color" src="/images/colors/ColorRojo.jpg" atl="color">      
                        
                    </div>
                </div> -->
                <!-- <div class="size">
                    <label for="talle"> Talle: </label>
                    <div class="size-button"></div>           
                            <input class="size" type="button" name="talle" value=5>       
                        
                    </div>
                -->
                <label for="amount"> Cantidad</label>
                <input class="amount" name="amount" id="amount" type="number" value="1">

                <h9>Agregar al carrito</h9>
                <button class= "add" type="submit" name="send">Agregar</button>
                                
                </form>
                <% if (locals.isLogged && locals.admin) { %>
                <div class="buttons-container">
                    <div class="edit-button">
                        <a class= "edit-button" href="/products/<%=prenda.id%>/edit">Editar</a>
                    </div>
                    <form class="buttons-container" action="/products/<%=prenda.id%>/delete?_method=DELETE" method="POST">
                    <button class= "delete-button" type="submit">Eliminar</button>
                    </form>      
                </div>
                <% } %>
            </div>
            
        </section>
        </div> 
        <div class="description" id="description">
            <h4>Descripci√≥n</h4>
            <p><%= prenda.descripcion %></p>
        </div>
         
    </main>
    
    <!-- Footer -->
    <%- include('./partials/footer')%>
</body>
</html>